<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/chat_contents"
        android:text="green test"
        android:background="@drawable/rounded_green_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="242dp"
        android:padding="8dp"
        android:textColor="#ffffff"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/time_message_sent"
        android:text="42:42"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        app:layout_constraintLeft_toRightOf="@+id/chat_contents"
        android:layout_marginLeft="4dp"
        app:layout_constraintBottom_toBottomOf="@+id/chat_contents" />

</androidx.constraintlayout.widget.ConstraintLayout>